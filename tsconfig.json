{
  "include": ["src/**/*", "./type.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES5",
    "module": "esnext",
    "noImplicitAny": false, // 允许any
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "strict": false,
    "checkJs": true,
    "alwaysStrict": false
  }
}
